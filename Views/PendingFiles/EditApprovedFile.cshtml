@model VisualHead.Models.ViewModel.UploadedFileViewModel

<h2>Edit Approved File</h2>

<div class="col-md-4">
    <form method="post" enctype="multipart/form-data" asp-action="EditApprovedFile" asp-route-id="@Model.Id">
        <div class="form-group mb-3">
            <label asp-for="Title"></label>
            <input type="text" asp-for="Title" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" required />
        </div>
        <div class="form-group mb-3">
            <label>Current File: @Model.FileName</label>
            <br />
            <label for="newFile">Upload New File (optional):</label>
            <input type="file" id="newFile" name="newFile" class="form-control" accept=".pdf" />
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>